<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <!-- 通用标题栏设置 -->
    <style name="titleBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">23sp</item>
        <item name="android:background">#CDCD00</item>
        <item name="android:text">标题栏</item>
    </style>

    <!-- 功能按钮:上一步 -->
    <style name="PreBtn">
		<item name="android:id">@id/pre_btn</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_alignParentBottom">true</item>
		<item name="android:layout_alignParentLeft">true</item>
		<item name="android:background">@drawable/my_function_btn</item>
		<item name="android:drawableLeft">@drawable/previous</item>
		<item name="android:onClick">pre</item>
		<item name="android:text">上一步</item>
    </style>
    
    <!-- 功能按钮:下一步 -->
    <style name="NextBtn">
		<item name="android:id">@id/next_btn</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_alignParentBottom">true</item>
		<item name="android:layout_alignParentRight">true</item>
		<item name="android:background">@drawable/my_function_btn</item>
		<item name="android:drawableRight">@drawable/next</item>
		<item name="android:onClick">next</item>
		<item name="android:text">下一步</item>
    </style>
    
    <style name="MyDiyDialog" parent="android:Theme.Dialog" >
        <item name="android:windowBackground">@color/transparent</item>
    </style>
</resources>
