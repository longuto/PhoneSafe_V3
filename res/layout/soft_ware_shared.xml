<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/local_popup_bg"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/uninstall_tv"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/img1"
        android:gravity="center_horizontal"
        android:text="卸载" />
    <TextView
        android:id="@+id/start_tv"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/img2"
		android:gravity="center_horizontal"
        android:text="启动" />
    <TextView
        android:id="@+id/share_tv"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/img3"
        android:gravity="center_horizontal"
        android:text="分享" />
    <TextView
        android:id="@+id/detail_tv"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
 		android:drawableTop="@drawable/img4"
        android:gravity="center_horizontal"
        android:text="详情" />
</LinearLayout>
