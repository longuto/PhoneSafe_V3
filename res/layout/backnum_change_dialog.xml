<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/title_bar_tv"
        style="@style/titleBarStyle"
        android:text="更改黑名单模式" />

    <TextView
        android:id="@+id/backNum_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_bar_tv"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="黑名单号码"
        android:textSize="22sp" />

    <RadioGroup
        android:id="@+id/backNumMode_rgp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/backNum_tv"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >
        <RadioButton
            android:id="@+id/all_rb"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="全部" />

        <RadioButton
            android:id="@+id/sms_rb"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="短信" />

        <RadioButton
            android:id="@+id/call_rb"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="电话" />
    </RadioGroup>
	
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/backNumMode_rgp"
        >

        <Button
            android:id="@+id/sure_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="确定" />

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
          	android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="取消" />
        
    </LinearLayout>
    
</RelativeLayout>