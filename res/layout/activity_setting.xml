<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:longuto="http://schemas.android.com/apk/res/com.longuto.phoneSafe"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.longuto.phoneSafe.SettingActivity" >
    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:textSize="28sp"
     	android:background="@android:color/holo_green_dark"
        android:text="设置中心" />
	<com.longuto.phoneSafe.view.SettingView
	    android:id="@+id/updateSet_SetV"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="5dp"
	    longuto:setting_title="自动更新设置"
	    longuto:des_on="开启自动更新"
	    longuto:des_off="关闭自动更新"
	    >
	</com.longuto.phoneSafe.view.SettingView>
	<com.longuto.phoneSafe.view.SettingView
	    android:id="@+id/numLocation_setv"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="5dp"
	    longuto:setting_title="来电归属地提醒"
	    longuto:des_on="开启提醒"
	    longuto:des_off="关闭提醒"
	    >
	</com.longuto.phoneSafe.view.SettingView>
	<com.longuto.phoneSafe.view.SettingView
	    android:id="@+id/isOPenBackNum_setv"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="5dp"
	    longuto:setting_title="是否开启黑名单拦截"
	    longuto:des_on="开启拦截模式"
	    longuto:des_off="关闭拦截模式"
	    >
	</com.longuto.phoneSafe.view.SettingView>
	<com.longuto.phoneSafe.view.SettingView
	    android:id="@+id/isOpenWatchDog_setv"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="5dp"
	    longuto:setting_title="是否开启看门狗功能"
	    longuto:des_on="开启看门狗功能"
	    longuto:des_off="关闭看门狗功能"
	    >
	</com.longuto.phoneSafe.view.SettingView>
</LinearLayout>
