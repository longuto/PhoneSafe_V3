<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.longuto.phoneSafe.AddressActivity" >
    <TextView
        style="@style/titleBarStyle"
        android:text="号码归属地查询" />
    <EditText
        android:id="@+id/numLocation_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        android:hint="请输入查询的手机号" />
    <Button
        android:id="@+id/queryNum_btn"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/my_lostfind_btn"
        android:text="查询" />
    <TextView
        android:id="@+id/numLocation_tv"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textSize="18sp" />
</LinearLayout>